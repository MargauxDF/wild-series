{% extends 'base.html.twig' %}

{% block title %}Episode #{{ episode.number }}{% endblock %}

{% block body %}
    <h1>{{ program.title }}</h1>
    <p>Saison #{{ season.number }}</p>
    <p>Episode #{{ episode.number }} : {{ episode.title }}</p>
    <p>Résumé : {{ episode.synopsis }}</p>

    <a href="{{ path('program_season_show', {program: program.id, season: season.id}) }}">
        Retour à la liste des épisodes
    </a>
{% endblock %}
