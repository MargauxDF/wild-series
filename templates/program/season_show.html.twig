{% extends 'base.html.twig' %}

{% block title %}Saison #{{ season.number }}{% endblock %}

{% block body %}
<h1>Saison {{ season.number }} de {{ program.title }}</h1>
    <hr>
    <div>
        <p>{{ season.description }}</p>
        <p>Résumé : {{ program.summary }}</p>
        <p>Année : {{ season.year }} </p>
    </div>
    <hr>
    <div>
        <h2>Liste des épisodes</h2>
        {% for episode in season.episodes %}
        <div>
            <a href="{{ path("program_episode_show", {program_id: program.id, season_id: season.id, episode_id: episode.id}) }}"><p>Episode {{ episode.number }} : {{ episode.title }}</p></a>
        </div>
        {% else %}
            <p>Aucun épisode trouvé.</p>
        {% endfor %}
    </div>
    <a href="{{ path('program_show', {id: program.id}) }}">
        Retour à la liste des Saisons
    </a>
{% endblock %}
